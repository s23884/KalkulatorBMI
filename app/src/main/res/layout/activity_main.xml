<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF4CA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBMI"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="275dp"
        android:backgroundTint="#0C4302"
        android:text="Calcualotor BMI"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonCalories"
        app:layout_constraintStart_toStartOf="@+id/buttonCalories"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRecipes"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:backgroundTint="#0C4302"
        android:text="Recipes"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCalories" />

    <Button
        android:id="@+id/buttonCalories"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="#0C4302"
        android:text="Calories"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonRecipes"
        app:layout_constraintStart_toStartOf="@+id/buttonRecipes"
        app:layout_constraintTop_toBottomOf="@+id/buttonBMI" />

</androidx.constraintlayout.widget.ConstraintLayout>